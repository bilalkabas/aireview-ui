# Webapp Configuration
WEBAPP_SHOW_HARMONIZED_BY_DEFAULT=true
WEBAPP_DEFAULT_HARMONIZATION_MODEL=gpt-5-chat-latest

# Admin Mode (enables reviewer type labels, model dropdown, and split view)
WEBAPP_ADMIN_MODE=true

# Review Shuffling
WEBAPP_SHUFFLE_REVIEWS=true
WEBAPP_SHUFFLE_SEED=42
WEBAPP_PROJECT_ROOT=.
WEBAPP_WEB_ROOT=webapp
WEBAPP_VENV_DIR=.venv
WEBAPP_REQUIREMENTS_FILE=webapp/requirements.txt
WEBAPP_REVIEWS_JSON=reviews/evaluation-data-all-venues.json
WEBAPP_PDFS_ROOT=pdfs
WEBAPP_ENV_FILE=.env

# Harmonization
OPENAI_API_KEY=
HARMONIZATION_INPUT_FILE=reviews/evaluation-data-all-venues.json
HARMONIZATION_OUTPUT_FILE=
HARMONIZATION_MODEL=gpt-5-chat-latest
HARMONIZATION_MAX_CONCURRENT=10